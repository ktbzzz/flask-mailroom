{% extends 'base.jinja2' %}


{% block content %}
<h2>Filter by:</h2>
<select>
    {% for donor in donor_list %}
        <option>donor</option>
    {% endfor %}
</select>

{% block subtitle %}Current Donations{% endblock subtitle %}

<ul>
    {% for donation in donations %}
        <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
    {% endfor %}
</ul>
{% endblock content %}
