{% extends 'base.jinja2' %}


{% block content %}
<h2>Filter by:</h2>
<br>
<form action="{{ url_for('all') }}" method="post">
<select name="filter_by_donor" value="{{ select_value }}">
    {% for donor in donor_list %}
        <option value={{ donor }}>{{ donor }}</option>
    {% endfor %}
</select>
<input type="submit" value="Submit">
</form>

<h2>i should select {{ select_value }}</h2>

{% block subtitle %}Current Donations{% endblock subtitle %}

<ul>
    {% for donation in donations %}
        <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
    {% endfor %}
</ul>
{% endblock content %}
