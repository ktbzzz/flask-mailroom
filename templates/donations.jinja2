{% extends 'base.jinja2' %}

{% block content %}
<h2>Filter by:</h2>
<form action="{{ url_for('donations') }}" method="post">
    <select name="filterby" onchange="filterby.submit()">
        {% for donation in donor_list %}
            <option value="{{ donation }}">{{ donation }}</option>
        {% endfor %}
    </select>
</form>

{% block subtitle %}Current Donations{% endblock subtitle %}

<ul>
    {% for donation in donations %}
        <li><b>{{ donation.donor.name }}</b>: {{ donation.value }}</li>
    {% endfor %}
</ul>
{% endblock content %}
